<!DOCTYPE html>
<html>
  <head>
    <title>FlyBy</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if logged_in? %>
        <%= link_to "Home", passenger_path(session[:passenger_id]) %> - <%= link_to "Flights", flights_path %> - <%= link_to 'Logout', logout_path %>
      <% else %>
        <%= link_to "Home", '/' %> - <%= link_to "Flights", flights_path %> - <%= link_to "Login", '/' %>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
