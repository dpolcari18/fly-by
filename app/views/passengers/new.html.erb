
<div class="heading secondary-heading wrapping"> Sign Up Form</div>

<table class = "form">
    <%= form_for @passenger, html: {class: "ui form"} do |f| %>
    <div class="two fields">
        <div class="field">
            <tr><td>First Name:</td> <td><%= f.text_field :first_name %></td>
        </div>
        <div class="field">
            <td>Last Name:</td> <td><%= f.text_field :last_name %></td></tr>
        </div>
    </div>
    <div class="two fields">
        <div class="field">
            <tr><td>User Name:</td> <td><%= f.text_field :username %></td>
        </div>
        <div class="field">
            <td>Password:</td> <td><%= f.password_field :password %></td></tr>
        </div>
    </div>
     <div class="two fields">
        <div class="field">
            <tr><td>Age:</td> <td><%= f.number_field :age %></td>
        </div>
        <tr><td><%= f.submit "Create Passenger", class: "ui inverted green button" %></td></tr>

    <% end %>
</table>

<div class="update">
    <% if flash[:error] %>
        <h3 style = 'color: red' >ERROR</h3>
        <% flash[:error].each do |message| %>
            <ul>
                <li style = 'color: red' ><%= message %></li>
            </ul>
        <% end %>
    <% end %>
</div>