
<h2> Welcome <%= @passenger.full_name %> </h2>

<h3> Here are your upcoming flights: </h3>

<table>
    <tr>
        <th>Airline</th>
        <th>Flight Number</th>
        <th>Ticket Number</th>
        <th>Origin</th>
        <th>Departure Date</th>
        <th>Time</th>
        <th>Destination</th>
        <th>Arrival Date</th>
        <th>Time</th>
    </tr>
    <% @passenger.tickets.each do |ticket| %>
        <tr>
            <td><%= ticket.flight.airline.name %></td>
            <td><%= ticket.flight.flight_no %></td>
            <td><%= ticket.ticket_number %></td>
            <td><%= ticket.flight.origin %></td>
            <td><%= ticket.flight.departure.strftime("%m/%d/%y") %></td>
            <td><%= ticket.flight.departure.strftime("%I:%M:%S %p") %></td>
            <td><%= ticket.flight.destination %></td>
            <td><%= ticket.flight.arrival.strftime("%m/%d/%y") %></td>
            <td><%= ticket.flight.arrival.strftime("%I:%M:%S %p") %></td>
            <td><%= button_to "View", ticket_path(ticket), method: 'get' %></td>
            <td><%= button_to "Edit", edit_ticket_path(ticket), method: 'get' %></td>
        </tr>
    <% end %>
</table>


