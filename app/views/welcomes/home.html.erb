<div class = "heading primary-heading"> Welcome to Fly-By</div>

<div class = "update">
  <% if flash[:update] %>
    <h2><%= flash[:update] %></h2>
  <% end %>
</div> 

<div class = "ui placeholder segment">
 <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class= "ui form">
        <%= form_with url: sessions_path do |f| %>
          <div class="field">
            <%= f.label :query, "Username:" %>   
              <div class="ui left icon input"> 
                <%= f.text_field :username %>
                <i class="user icon"></i>
              </div>
          </div>
          <div class="field">
            <%= f.label :password %> 
            <div class="ui left icon input">
              <%= f.password_field :password %>
              <i class="lock icon"></i>
            </div>
          </div>
          <div class="ui blue submit button"><%= f.submit "Login", class:"ui primary button"  %></div>
        <% end %>
      </div>
    </div>
    <div class="middle aligned column">     
      <div class="ui big button">
        <i class="signup icon"></i>
          <%= link_to "Sign Up", new_passenger_path%>
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>

<div class="error">
  <% if flash[:error]%>
    <h3>ERROR</h3>
    <div style = 'color: red' ><%= flash[:error] %></div>
  <% end %>
</div>

